{
  "version": 2,
  "name": "event-booking-app",
  "builds": [
    {
      "src": "event/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "event/build"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      },
      "dest": "/event/build/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/event/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}